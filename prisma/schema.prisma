datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")  // .env 파일의 DATABASE_URL 참조
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}


model Post {
  id        Int      @id @default(autoincrement()) // 고유한 ID 필드 추가
  title     String   @unique                      // 제목을 고유 필드로 설정
  slug      String   @unique                      // 슬러그 필드를 추가 (고유값)
  excerpt   String
  content   String   @db.LongText                 // content 필드를 긴 텍스트로 설정
  image     String?                               // 이미지 필드는 선택 사항
  createdAt DateTime @default(now())              // 생성 시간을 기본값으로 설정
}

